#:include kv/homescreen.kv
#:include kv/settingsscreen.kv
#:include kv/changeavatarscreen.kv
#:include kv/loginscreen.kv

GridLayout:
    cols: 1
    FloatLayout:
        GridLayout:
            canvas:
                Color:
                    rgb: utils.get_color_from_hex("#39B3F2")
                Rectangle:
                    size: self.size
                    pos: self.pos
            # Put two weather icon here
            rows: 1
            pos_hint: {"top": 1, "left": 1}
            size_hint: 1, .05
            Image:
                source: "icons/icons8-sunrise-48.png"
            Image:
                source: "icons/icons8-sun-64.png"
        FloatLayout:
            canvas:
                Color:
                    rgb: utils.get_color_from_hex("#39B3F2")
                Rectangle:
                    size: self.size
                    pos: self.pos
            # Two weather icons and avatar
            rows: 1
            pos_hint: {"top": 0.95, "left": 1}
            size_hint: 1, .15
            Image:
                source: "icons/sunset.png"
                size_hint: 0.25, 0.5
                pos_hint: {"top": 1, "right": 0.25}
            Image:
                source: "avatars/avatar_pic.png"
                id: avatar_image
                size_hint: 0.25, 1
                pos_hint: {"top": .95, "right": 0.62}
            Image:
                source: "icons/cresent_moon.png"
                size_hint: 0.25, 0.5
                pos_hint: {"top": 1, "right": 1}


        ScreenManager:
            size_hint: 1, 0.799
            pos_hint: {"top": .799, "left": 1}
            id: screen_manager
            LoginScreen:
                name: "login_screen"
                id: login_screen
            HomeScreen:
                name: "home_screen"
                id: home_screen
            SettingsScreen:
                name: "settings_screen"
                id: settings_screen
            ChangeAvatarScreen:
                name: "change_avatar_screen"
                id: change_avatar_screen
