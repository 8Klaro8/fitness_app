#:import utils kivy.utils

<HomeScreen>:
    FloatLayout:
        canvas:
            Color:
                rgb: utils.get_color_from_hex("#39B3F2")
            Rectangle:
                size: self.size
                pos: self.pos
        Label:
            # Streak Label
            pos_hint: {"top": 1, "left": 1}
            size_hint: 1, .1
            text: ""
            id: streak_label
        ScrollView:
            pos_hint: {"top": .9, "left": 1}
            size_hint: 1, .7
            GridLayout:
                # Banner grid
                spacing: 10,10
                id: banner_grid
                size_hint_y: None
                cols: 1
                height: self.minimum_height
                row_default_height: '100dp'
                row_force_default: True

        GridLayout:
            # Add 3 menu buttons here
            rows: 1
            pos_hint: {"top": .2, "left": 1}
            size_hint: 1, .2
            ImageButton:
                source: "icons/nutrition.png"
                on_release:
                    print("Add friend button")
            ImageButton:
                source: "icons/workout-001.png"
                on_release:
                    print("workout button")
            ImageButton:
                source: "icons/settings.png"
                on_release:
                    app.change_screen("settings_screen")
                    root.manager.transition.direction = 'left'




